<div id="notif-modal<%=index%>" class="modal notif-modal">
    <div class="modal-header">
        <p>Edit Notification</p>
        <a href="#" class="modal-close">
            <img class="center" src="/images/notifModal/close.svg" alt="Close"> 
        </a>
    </div>
    <div id="content" class="modal-content">
        <form class="col s12" action="/jobs/<%=job.id%>" method="POST">
            <div class="row">
                <div class="input-field col s12">
                    <input id="class_name" type="text" name="class_name" value="<%=job.class_name%>">
                    <label for="class_name">Class Name</label>
                </div>
            </div>
            <div class="row">
                <div class="col s1">
                    <img src="/images/notifModal/people.svg" alt="People">
                </div>
                <div class="input-field col s11">
                    <a class="modal-trigger" href="#clients-modal<%=index%>">View a full email list</a>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <textarea id="message" name="message" class="materialize-textarea" placeholder="Enter notification content here..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="reset" href="#" id="cancel-btn" class="modal-close waves-effect waves-light btn-flat">Cancel</button>
                <button type="submit" href="#" id="submit-btn" class="modal-close waves-effect waves-green btn-flat">Submit</button>
            </div>
        </form>
    </div>
</div>